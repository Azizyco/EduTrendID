# Server Configuration
PORT=3000
NODE_ENV=development

# Database PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=edutrendid

# JWT Secret (gunakan string random yang aman)
JWT_SECRET=edutrendid_secret_key_change_this_in_production

